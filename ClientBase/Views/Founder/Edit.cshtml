@model Founder

@{ 
    ViewBag.Title = Model.Id == 0 ? "Добавление компании" : $"{Model.FullName} - Редактирование";
}

@using (Html.BeginForm("Edit", "Founder", FormMethod.Post))
{
<input type="hidden" asp-for="Id" />
<div class="form-group">
    <label asp-for="LastName"></label>
    <div><span asp-validation-for="LastName" class="text-danger"></span></div>
    <input asp-for="LastName" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="FirstName"></label>
    <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
    <input asp-for="FirstName" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Patronymic"></label>
    <div><span asp-validation-for="Patronymic" class="text-danger"></span></div>
    <input asp-for="Patronymic" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="TaxpayerId"></label>
    <div><span asp-validation-for="TaxpayerId" class="text-danger"></span></div>
    <input asp-for="TaxpayerId" class="form-control" placeholder="12 цифр"
           value="@if (Model.TaxpayerId != 0){ @Model.TaxpayerId }" />
</div>

<div class="validation" asp-validation-summary="ModelOnly"></div>

<div class="text-center">
    <input class="btn btn-primary" type="submit" value="Сохранить">
    <a asp-action="Index" class="btn btn-outline-danger">Отмена</a>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}