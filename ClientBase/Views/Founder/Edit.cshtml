@model Founder

@using (Html.BeginForm("Edit", "Founder", FormMethod.Post))
{
    <input type="hidden" asp-for="FounderId" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <div><span asp-validation-for="FullName" class="text-danger"></span></div>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TaxpayerId"></label>
        <div><span asp-validation-for="TaxpayerId" class="text-danger"></span></div>
        <input asp-for="TaxpayerId" class="form-control" placeholder="12 цифр"
               value="@if (Model.TaxpayerId != 0){ @Model.TaxpayerId }" />
    </div>

    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Сохранить">
        <a asp-action="Index" class="btn btn-outline-danger">Отмена</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}